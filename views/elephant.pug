extends layout

block content
  h1= title
  - let elephants=results
  div(class="container-fluid")
    div(class="row m-1")
      each elephant in elephants
        - let destination = `dispatch(\"/elephant/update?id=${elephant._id}\")`
        div(class="col-sm-2 "  class="m-1")  #{elephant.Name} - #{elephant.Company} - #{elephant.Price}
          button.btn( class="btn-primary"  class="m-1" class="btn-toolbar", onclick= destination) Update
  script.
      function dispatch(path)
      {
      window.location.href=path
      }